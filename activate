# --------------------------------------------------------------------
# PATHS
# --------------------------------------------------------------------

# Set paths
export CORDEXP_HOME="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
export CORDEXP_ROOT="$( cd "$( dirname "${CORDEXP_HOME}" )" && pwd )"
export CORDEXP_BASH=$CORDEXP_HOME/sh
export CORDEXP_LIB=$CORDEXP_HOME/lib
export CORDEXP_TEMPLATES=$CORDEXP_HOME/templates

# Ensure target scripts are executable.
chmod a+x $CORDEXP_BASH/*.sh
chmod a+x $CORDEXP_BASH/*/*.sh

# --------------------------------------------------------------------
# COMMAND EXECUTION
# --------------------------------------------------------------------

# Command executor.
exec_cmd()
{
	source $CORDEXP_BASH/utils.sh

	log_banner
	log $1" :: BEGINS"
	activate_venv
	log_banner

	target=$CORDEXP_BASH/$2
	if [ "$3" ] && [ "$4" ] && [ "$5" ]; then
		source $target $3 $4 $5
	elif [ "$3" ] && [ "$4" ]; then
		source $target $3 $4 ""
	elif [ "$3" ]; then
		source $target $3 "" ""
	else
		source $target ""
	fi

	log_banner
	log $1" :: ENDS"
	log_banner
}

