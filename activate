# --------------------------------------------------------------------
# COMPOSITE COMMANDS
# --------------------------------------------------------------------

_reset_all()
{
	cordexp-models-generate-cim

	esdoc-archive-delete-documents CORDEXP
	cordexp-experiments-archive-cim-documents
	cordexp-models-archive-cim-documents

	esdoc-ws-db-flush CORDEXP
	esdoc-ws-db-ingest

	esdoc-ws-db-backup
	esdoc-archive-compress
}
alias cordexp-reset=_reset_all
